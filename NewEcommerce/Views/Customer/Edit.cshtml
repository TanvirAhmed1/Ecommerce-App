@model NewEcommerce.Models.CustomerEditViewModel
@{
    Layout = "~/Views/Shared/_NiceAdmin.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1 class="card-title">Customer Edit</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <label for="CustomerType">Customer Type</label>
            <select type="text" asp-for="CustomerTypeId" asp-items="Model.CustomerTypeItems" class="form-control">
                <option value="">Select....</option>
            </select>
            <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
            <label for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control" />


            <label for="Phone">Phone</label>
            <input type="text" asp-for="Phone" class="form-control" />

            <label for="Address">Address</label>
            <input type="text" asp-for="Address" class="form-control" />

            <input type="submit" value="Save" class="btn btn-primary">
        </form>


    </div>
</div>
