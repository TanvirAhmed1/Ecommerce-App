@using Ecommerce.Models.EntityModels
@model List<Ecommerce.Models.EntityModels.Customer>


<h1>Customer List</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>


    </thead>
    <tbody>

        @foreach (Customer customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.PhoneNo</td>
                <td>@customer.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-primary productEdit">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger productDelete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
