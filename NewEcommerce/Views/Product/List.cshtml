@model ICollection<Ecommerce.Models.EntityModels.Product>


<h1>Product List</h1>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Picture</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Code</td>
                <td>@product.Name</td>
                <td>
                    @if (product.Image != null)
                    {
                        var base64 = Convert.ToBase64String(product.Image);
                        var img = string.Format("data:image/png;base64,{0}", base64);
                        <img src='@img' style="max-width:100px;max-height:100px" />
                    }
                </td>
                <td>@product.CategoryId</td>
                <td>@product.Quantity</td>
                <td>@product.Price</td>
                <td>@(Convert.ToDouble(product.Quantity) * Convert.ToDouble(product.Price))</td>

                <td>
                    <!--<a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary productEdit">Edit</a> |-->

                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger productDelete">Delete</a>
                </td>

            </tr>
        }

    </tbody>

</table>
